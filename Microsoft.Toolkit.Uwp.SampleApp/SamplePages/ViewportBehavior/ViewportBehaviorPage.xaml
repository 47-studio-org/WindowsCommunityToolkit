<Page x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.ViewportBehaviorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ScrollViewer>
                <Grid Height="2200">
                    <Border Width="200"
                            Height="200"
                            Background="Gray">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:ViewportBehavior EnteredViewport="EffectHost_EnteredViewport"
                                                        EnteringViewport="EffectHost_EnteringViewport"
                                                        LeavedViewport="EffectHost_LeavedViewport"
                                                        LeavingViewport="EffectHost_LeavingViewport" />
                        </interactivity:Interaction.Behaviors>
                        <Image x:Name="EffectElement"
                               Width="100"
                               Height="100" />
                    </Border>
                </Grid>
            </ScrollViewer>
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Foreground="OrangeRed"
                       IsHitTestVisible="False"
                       Text="Please scroll down to see the effect." />
        </Grid>
        <controls:GridSplitter Grid.Row="1" />
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Text="Logs" />
                <Button Grid.Column="1"
                        Click="ClearLogsButton_Click"
                        Content="Clear" />
            </Grid>
            <ScrollViewer x:Name="LogsScrollViewer"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Visible">
                <ItemsControl x:Name="LogsItemsControl"
                              Foreground="DarkGray" />
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>