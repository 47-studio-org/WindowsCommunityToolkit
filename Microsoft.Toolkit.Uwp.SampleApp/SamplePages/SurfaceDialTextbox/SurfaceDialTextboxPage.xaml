<Page x:Class="Microsoft.Toolkit.Uwp.SampleApp.SamplePages.SurfaceDialTextboxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uwpui="using:Microsoft.Toolkit.Uwp.UI"
      mc:Ignorable="d">

    <!-- Shallow Copy -->
    <Grid>
        <TextBox uwpui:SurfaceDialTextbox.StepValue="1.0"
                 uwpui:SurfaceDialTextbox.ForceMenuItem="True"
                 uwpui:SurfaceDialTextbox.EnableHapticFeedback="True"
                 uwpui:SurfaceDialTextbox.EnableMinMaxValue="True"
                 uwpui:SurfaceDialTextbox.MinValue="0"
                 uwpui:SurfaceDialTextbox.MaxValue="100"
                 uwpui:SurfaceDialTextbox.Icon="Ruler"
                 uwpui:SurfaceDialTextbox.EnableTapToNextControl="True" />
    </Grid>
</Page>
